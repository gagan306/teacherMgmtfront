@{
    ViewData["Title"] = "Manage Subjects";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h3 class="text-center mb-4 fw-bold">Subject Management</h3>

        <!-- Form -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form id="subjectForm">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Subject Code</label>
                            <input type="text" class="form-control" id="subjectCode" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Subject Name</label>
                            <input type="text" class="form-control" id="subjectName" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Credit Hours</label>
                            <input type="text" class="form-control" id="creditHours" placeholder="e.g. 1.5 or 3" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Batch</label>
                            <select class="form-control" id="Batch" required>
                                <option value="2025">2025</option>
                                <option value="2026">2026</option>
                                <option value="2027">2027</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Department</label>
                            <select class="form-select" id="department" required>
                                <option value="Physics">Physics</option>
                                <option value="Management">Management</option> 
                                <option value="chemistry">chemistry</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Class Type</label>
                            <select class="form-select" id="classType" required>
                                <option value="Lecture">Lecture</option>
                                <option value="Lab">Lab</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Faculty</label>
                            <select class="form-select" id="faculty" required>
                                <option value="Science">Science</option>
                                <option value="Management">Management</option>
                                <option value="Law">Law</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label d-block">Has Sub Subjects?</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="hasSubSubjects" id="hasSubYes" value="yes" />
                            <label class="form-check-label" for="hasSubYes">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="hasSubSubjects" id="hasSubNo" value="no" checked />
                            <label class="form-check-label" for="hasSubNo">No</label>
                        </div>
                    </div>

                    <div class="col-md-4" id="subSubjectCountDiv" style="display: none;">
                        <label class="form-label">No. of Sub Subjects</label>
                        <input type="number" min="1" class="form-control" id="subSubjectCount" placeholder="e.g. 2" />
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary px-4">Add Subject</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table -->
        <div class="card shadow-sm" style="margin-bottom: auto;">
            <div class="card-body table-responsive">
                <table class="table table-bordered align-middle text-center mb-0" id="subjectsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Credit Hours</th>
                            <th>Department</th>
                            <th>Class Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Populated via JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

