@{
    ViewBag.Title = "Manage Classes";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />


<form id="classForm">
    <div class="row g-3">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Class Name" id="className" />
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Faculty" id="faculty" />
        </div>
        <div class="col-md-4">
            <select class="form-select" id="shift">
                <option value="">Select Shift</option>
                <option value="Day">Day</option>
                <option value="Morning">Morning</option>
            </select>
        </div>
        <div class="col-md-4">
            <input type="number" class="form-control" placeholder="Per Class Duration (mins)" id="duration" />
        </div>
        <div class="col-md-4">
            <input type="number" class="form-control" placeholder="Break Duration (mins)" id="breakDuration" />
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Batch" id="batch" />
        </div>
        <div class="col-md-4">
            <input type="time" class="form-control" placeholder="Time From" id="timeFrom" />
        </div>
        <div class="col-md-4">
            <input type="time" class="form-control" placeholder="Time To" id="timeTo" />
        </div>
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-success px-4">Save Class</button>
    </div>
</form>


<div class="card p-4">
    <h4 class="mb-4">Class List</h4>
    <table class="table table-bordered align-middle mb-0">
        <thead>
            <tr>
                <th>Class Name</th>
                <th>Faculty</th>
                <th>Shift</th>
                <th>Duration</th>
                <th>Break</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody id="classTableBody">
            <!-- Rows will be inserted dynamically -->
        </tbody>
    </table>
</div>


<script src="~/js/ManageClass.js"></script> 